    },
    "dependencies": {
        "chalk": "^3.0.0",
        "commander": "^4.1.0",
        "comment-json": "^2.4.1",
        "eslint": "^6.8.0",
        "inquirer": "^7.0.4",
        "prettier": "^1.19.1",
        "shelljs": "^0.8.3",
