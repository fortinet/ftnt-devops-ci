{
    "name": "ftnt-devops-ci",
    "version": "1.1.7-hotfix.1",
    "description": "A Node.js project format checking and linting tool for CI practices.",
    "main": "bin/ftnt-devops-ci.js",
    "scripts": {
        "check:format": "./bin/ftnt-devops-ci.js check --format=templates/.prettierrc --format-ignore=templates/.prettierignore \"**/*.{ts,js,json}\"",
        "fix:format": "./bin/ftnt-devops-ci.js fix --format=templates/.prettierrc --format-ignore=templates/.prettierignore \"**/*.{ts,js,json}\"",
        "check:lint": "./bin/ftnt-devops-ci.js check --lint=templates/.eslintrc --lint-ignore=templates/.eslintignore \"**/*.{ts,js,json}\"",
        "fix:lint": "./bin/ftnt-devops-ci.js fix --lint=templates/.eslintrc --lint-ignore=templates/.eslintignore \"**/*.{ts,js,json}\"",
        "check": "./bin/ftnt-devops-ci.js check --lint=templates/.eslintrc --format=templates/.prettierrc --lint-ignore=templates/.eslintignore --format-ignore=templates/.prettierignore \"**/*.{ts,js,json}\"",
        "fix": "./bin/ftnt-devops-ci.js fix --lint=templates/.eslintrc --format=templates/.prettierrc --lint-ignore=templates/.eslintignore --format-ignore=templates/.prettierignore \"**/*.{ts,js,json}\"",
        "test": "npm run check  && npm run check:format && npm run check:lint && npm run fix && npm run fix:format && npm run fix:lint && mocha",
        "make-dist": "npm pack"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/fortinet/ftnt-devops-ci.git"
    },
    "keywords": [
        "format",
        "lint",
        "nodejs"
    ],
    "author": "Fortinet <github@fortinet.com>",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/fortinet/ftnt-devops-ci/issues"
    },
    "homepage": "https://github.com/fortinet/ftnt-devops-ci#readme",
    "bin": {
        "ftnt-devops-ci": "bin/ftnt-devops-ci.js"
    },
    "dependencies": {
        "@typescript-eslint/eslint-plugin": "^5.3.0",
        "@typescript-eslint/parser": "^5.3.0",
        "chalk": "^3.0.0",
        "commander": "^4.1.1",
        "comment-json": "^2.4.2",
        "eslint": "^8.1.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-mocha": "^9.0.0",
        "inquirer": "^7.3.3",
        "path-parse": "^1.0.7",
        "prettier": "^2.4.1",
        "shelljs": "^0.8.4",
        "typescript": "^4.4.4"
    },
    "devDependencies": {
        "mocha": "^9.1.3"
    }
}
